<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Base.V7.Theme.AppCompat.Light">
        <!--Customize your theme here.-->
        <item name="actionBarStyle">@style/ActionBarBaseStyle</item>
        <item name="toolbarStyle">@style/ActionBarBaseStyle</item>
        <!--去掉actionbar阴影 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.LaunchStyle">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionBarBaseStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="height">50dip</item>
    </style>

    <style name="ImageTranslucentTheme" parent="AppTheme.NoActionBar">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
    </style>

    <style name="dialogFullscreen">
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>