<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp" >

        <com.wty.app.bluetoothcolorlamp.widget.roundedimageview.RoundedImageView
            android:id="@+id/center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:background="@drawable/btn1"
            app:riv_oval="true"
            app:riv_mutate_background="true"
            app:riv_border_color="@color/white"/>

        <com.wty.app.bluetoothcolorlamp.widget.roundedimageview.RoundedImageView
            android:id="@+id/Button01"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/green"
            app:riv_oval="true"
            app:riv_mutate_background="true"
            app:riv_border_color="@color/white"/>

        <com.wty.app.bluetoothcolorlamp.widget.roundedimageview.RoundedImageView
            android:id="@+id/Button03"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/green"
            app:riv_oval="true"
            app:riv_mutate_background="true"
            app:riv_border_color="@color/white"/>

        <com.wty.app.bluetoothcolorlamp.widget.roundedimageview.RoundedImageView
            android:id="@+id/Button05"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/green"
            app:riv_oval="true"
            app:riv_mutate_background="true"
            app:riv_border_color="@color/white"/>

        <com.wty.app.bluetoothcolorlamp.widget.roundedimageview.RoundedImageView
            android:id="@+id/Button07"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/green"
            app:riv_oval="true"
            app:riv_mutate_background="true"
            app:riv_border_color="@color/white"/>

        <com.wty.app.bluetoothcolorlamp.widget.roundedimageview.RoundedImageView
            android:id="@+id/Button08"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/Button07"
            android:layout_marginBottom="@dimen/shapeSize"
            android:layout_marginLeft="@dimen/shapeSize"
            android:layout_toRightOf="@+id/Button01"
            android:background="@color/green"
            app:riv_oval="true"
            app:riv_mutate_background="true"
            app:riv_border_color="@color/white"/>

        <com.wty.app.bluetoothcolorlamp.widget.roundedimageview.RoundedImageView
            android:id="@+id/Button02"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/Button03"
            android:layout_marginBottom="@dimen/shapeSize"
            android:layout_marginRight="@dimen/shapeSize"
            android:layout_toLeftOf="@+id/Button01"
            android:background="@color/green"
            app:riv_oval="true"
            app:riv_mutate_background="true"
            app:riv_border_color="@color/white"/>

        <com.wty.app.bluetoothcolorlamp.widget.roundedimageview.RoundedImageView
            android:id="@+id/Button04"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/Button03"
            android:layout_marginRight="@dimen/shapeSize"
            android:layout_marginTop="@dimen/shapeSize"
            android:layout_toLeftOf="@+id/Button05"
            android:background="@color/green"
            app:riv_oval="true"
            app:riv_mutate_background="true"
            app:riv_border_color="@color/white"/>

        <com.wty.app.bluetoothcolorlamp.widget.roundedimageview.RoundedImageView
            android:id="@+id/Button06"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/Button07"
            android:layout_marginLeft="@dimen/shapeSize"
            android:layout_marginTop="@dimen/shapeSize"
            android:layout_toRightOf="@+id/Button05"
            android:background="@color/green"
            app:riv_oval="true"
            app:riv_mutate_background="true"
            app:riv_border_color="@color/white"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:text="@string/textRed"
            android:textColor="@color/textColor" />

        <SeekBar
            android:id="@+id/seekBarRed"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:indeterminate="false"
            android:max="255" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:text="@string/textGreen"
            android:textColor="@color/textColor" />

        <SeekBar
            android:id="@+id/seekBarGreen"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="255" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:text="@string/textBlue"
            android:textColor="@color/textColor" />

        <SeekBar
            android:id="@+id/seekBarBlue"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="255" />
    </LinearLayout>

</LinearLayout>
